@model Product
<div class="p-1 pb-4">
    <div class="card">
        <div class="p-2"><img src="~/img/@Model.ImageUrl" alt="" class="card-img-top"></div>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p>@Model.Description</p>
            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId"
                class="btn btn-primary btn-sm">Incele</a>

            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.ProductId"
                class="btn btn-secondary btn-sm">Guncelle</a>

            <form method="post" action="/product/delete" class="d-inline">
                <input type="hidden" name="ProductId" value="@Model.ProductId">
                <button class="btn btn-danger btn-sm">Sil</button>
            </form>
        </div>
    </div>
</div>