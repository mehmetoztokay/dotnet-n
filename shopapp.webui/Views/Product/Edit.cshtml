@model Product
@ViewBag.Categories

<form method="POST" class="col-md-5">
    <input type="hidden" value="@Model.ProductId" name="ProductId" />
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" name="Name" value="@Model.Name" class="form-control">
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" name="Price" value="@Model.Price" class="form-control">
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" name="Description" value="@Model.Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" name="ImageUrl" value="@Model.ImageUrl" class="form-control">
    </div>

