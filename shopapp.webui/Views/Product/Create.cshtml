@model Product


<form method="POST" class="col-md-5">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" name="Name" class="form-control" value="@Model.Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" name="Price" class="form-control" value="@Model.Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" name="Description" class="form-control" value="@Model.Description"></textarea>
    </div>

    <div class="form-group">
        <label for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" name="ImageUrl" class="form-control" value="@Model.ImageUrl">
    </div>

    <div class="form-group">
        <label for="ImageUrl">Category</label>
        <input asp-for="CategoryId" name="CategoryId" class="form-control" value="@Model.CategoryId">
    </div>


